    "src/interfaces/model/modelFactory.ts",
    "src/interfaces/model/Serializable.ts",
    "src/interfaces/service/Service.ts",
    "src/tsmvc.ts",
    "src/typings/bluebird/bluebird.d.ts",
    "src/typings/es6-collections/es6-collections.d.ts",
    "src/typings/form-data/form-data.d.ts",
    "src/typings/node/node.d.ts",
    "src/typings/request-promise/request-promise.d.ts",
    "src/typings/request/request.d.ts",
    "src/typings/tsd.d.ts",
    "test/examples/example.ts",
    "test/examples/implementation/config/config.ts",
    "test/examples/implementation/data/AddressDataRepository.ts",
    "test/examples/implementation/data/AddressDataRepositoryImpl.ts",
    "test/examples/implementation/data/UserDataRepository.ts",
    "test/examples/implementation/data/UserDataRepositoryImpl.ts",
    "test/examples/implementation/model/AddressModel.ts",
    "test/examples/implementation/model/UserModel.ts",
    "test/examples/implementation/service/AddressService.ts",
    "test/examples/implementation/service/UserService.ts",
    "test/typings/tsd.d.ts"

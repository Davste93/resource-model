{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.ts",
    "typings/**/*.tsx"
  ],
  "files": [
    "src/examples/example.ts",
    "src/examples/implementation/config/config.ts",
    "src/examples/implementation/data/AddressDataRepository.ts",
    "src/examples/implementation/data/AddressDataRepositoryImpl.ts",
    "src/examples/implementation/data/UserDataRepository.ts",
    "src/examples/implementation/data/UserDataRepositoryImpl.ts",
    "src/examples/implementation/model/AddressModel.ts",
    "src/examples/implementation/model/UserModel.ts",
    "src/examples/implementation/service/UserService.ts",
    "src/lib/classes/helper/ApiRepository.ts",
    "src/lib/classes/helper/List.ts",
    "src/lib/interfaces/data/DataRepository.ts",
    "src/lib/interfaces/model/Ctor.ts",
    "src/lib/interfaces/model/Model.ts",
    "src/lib/interfaces/model/Serializable.ts",
    "src/lib/interfaces/service/Service.ts",
    "typings/bluebird/bluebird.d.ts",
    "typings/es6-collections/es6-collections.d.ts",
    "typings/form-data/form-data.d.ts",
    "typings/node/node.d.ts",
    "typings/request-promise/request-promise.d.ts",
    "typings/request/request.d.ts",
    "typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}

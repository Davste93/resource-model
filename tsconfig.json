{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.ts",
    "typings/**/*.tsx"
  ],
  "files": [
    "src/examples/example.ts",
    "src/examples/Implementation/Config/config.ts",
    "src/examples/Implementation/Data/AddressDataRepository.ts",
    "src/examples/Implementation/Data/UserDataRepository.ts",
    "src/examples/Implementation/Model/AddressModel.ts",
    "src/examples/Implementation/Model/UserModel.ts",
    "src/examples/Implementation/Service/UserServiceAsync.ts",
    "src/lib/classes/Helper/ApiRepository.ts",
    "src/lib/classes/Helper/List.ts",
    "src/lib/interfaces/Data/IDataRepository.ts",
    "src/lib/interfaces/Data/IDataRepositoryAsync.ts",
    "src/lib/interfaces/Model/ICtor.ts",
    "src/lib/interfaces/Model/IModel.ts",
    "src/lib/interfaces/Model/ISerializable.ts",
    "src/lib/interfaces/Service/Service.ts",
    "typings/bluebird/bluebird.d.ts",
    "typings/es6-collections/es6-collections.d.ts",
    "typings/form-data/form-data.d.ts",
    "typings/node/node.d.ts",
    "typings/request-promise/request-promise.d.ts",
    "typings/request/request.d.ts",
    "typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
